<!DOCTYPE html>
<html>
<head>
  <title>创新实验室管理系统</title>
  <%= stylesheet_link_tag    "bootstrap_ball", media: 'all' %>
  <%= stylesheet_link_tag    "index/common", media: 'all' %>
  <%= stylesheet_link_tag    params[:controller], media: 'all' %>
  <%= yield :css %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
  <script src="<%= asset_path 'html5shiv.min.js' %>>"></script>
  <![endif]-->
</head>
<body>
<header>
  <nav>
    <ul class="links">
      <li class="active">
        <a href="<%= index_index_url %>">首 页</a>
      </li>
      <li>
        <a href="<%= contest_url %>"> 比赛列表</a>
      </li>
      <li><%= link_to "后台管理",manage_url %></li>
    </ul>
  </nav>
    <div id="logo"><a href="<%= index_index_url %>"><%= image_tag 'index/logo.png' %></a></div>
    <div id="userzone">
      <nav>
        <ul class="links user">
          <% if @student %>
              <li class="info">
                <a href="<%= user_index_path %>"><%= image_tag @student.avatar.url(:thumb_mini),width:30,height:30,id:"user-avatar" %> &nbsp;用户中心</a>
              </li>
              <li class="warning"><%= link_to "退出",logout_path,method: :delete %></li>
          <% else %>
              <li class="">
                <%= link_to '登录',login_box_url,remote: true %>
              </li>
              <li class="success"><a href="<%= login_regist_url %>">注册</a></li>
          <% end %>
        </ul>
      </nav>
    </div>

</header>

<div class="main">
    <div class="content container">
      <%= yield %>
    </div>  
</div>

<footer>
  <div class="copyright text-center">
    <div class="footer-logo">创新实验室</div>
    <p class="text">Copyright © 2013-4ever cxlab</p>
  </div>
</footer>

<!-- 用户登录浮动框 -->
<div id="login-pop" class="dialog" style="display:none"></div>
<div id="black-layer" style="display:none"></div>


</body>
<%= javascript_include_tag  "index/common" %>
<%= javascript_include_tag params[:controller] %>
<%= yield :js %>
</html>
