<%= content_for :lunbo do %>


<div class="news-flow">
<div class="row">
  <div class="lunbo col-md-8">
    <div id="carousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner" role="listbox">
        <% count=-1 %>
        <% @news_with_cover.each_with_index do |news,i| %>
        <div class="item <%= 'active' if i==0 %>" data-id="<%= i %>">
          <%= link_to image_tag(news.cover.url),'#' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="news-list col-md-4">
    <ul id="news-list-ul">
      <% @news_with_cover.each_with_index do |news,index| %>
        <li class="<%= 'active' if index==0 %>" data-id="<%= index %>"><div class="fixed_box"><%= news.title %></div></li>
      <% end %>
    </ul>
  </div>

</div>
</div>
<div class="divider"></div>

<% end %>

<%= content_for :aside do %>
    <div class="sidebar">
      <div class="title">赛事通知</div>
    </div>
    <marquee direction="up" onmouseover="this.stop()" onmouseout="this.start()" scrollamount="2" height="100px" width="90%" style="height: 100px; width: 90%;">
      2015年挑战杯开赛啦！<a>详情查看</a><br>
