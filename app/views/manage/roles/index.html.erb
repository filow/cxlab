<div class="page-header">
  <h1>角色列表</h1>
</div>
<table class="table">
  <thead>
    <tr>
      <th><%= tm('role.name') %></th>
      <th><%= tm('role.remark') %></th>
      <th><%= tm('role.is_enabled') %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @manage_roles.each do |manage_role| %>
      <tr>
        <td><%= manage_role.name %></td>
        <td><%= manage_role.remark %></td>
        <td>
        <%= switch manage_role.is_enabled,bs_label_tag('启用','success'),bs_label_tag('停用','default') %>
        </td>
        <td>
        <%= link_to '编辑', edit_manage_role_path(manage_role),class:"btn btn-warning" %>
        <%= link_to '删除', manage_role, method: :delete, data: { confirm: t('confirm_delete') },class:"btn btn-danger" %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to fa_icon('plus',text:'添加角色'), new_manage_role_path,class:"btn btn-success" %>
