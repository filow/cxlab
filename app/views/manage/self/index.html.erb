<div class="page-header">
    <h2>您的个人信息</h2>
</div>
<%= form_tag manage_self_update_path,name: "form",class:"form-inline" do %>

<table class="table">
    <tr>
        <td>用户名</td>
        <td><%= text_field_tag :uid,@manage_admin.uid,class: "form-control" %></td>
    </tr>
    <tr>
        <td>姓名</td>
        <td><%= text_field_tag :nickname,@manage_admin.nickname,class: "form-control" %></td>
    </tr>
    <tr>
        <td>密码</td>
        <td><%= password_field_tag :pwd,nil,class: "form-control",placeholder: "留空不修改" %></td>
    </tr>
    <tr>
        <td>电子邮箱</td>
        <td><%= text_field_tag :email,@manage_admin.email,class: "form-control" %></td>
    </tr>
    <tr>
        <td>个人介绍</td>
        <td><%= text_field_tag :desc,@manage_admin.desc,class: "form-control login-input" %></td>
    </tr>
    <tr>
        <td></td>
        <td><%= submit_tag "提交修改",class: "btn btn-primary login-submit" %></td>
    </tr>
</table>

<% end %>
