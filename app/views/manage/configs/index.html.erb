<div class="page-header">
  <h1>系统设置</h1>
</div>

<div class="panel-group" id="accordion">
<% i=0 %>
<% @manage_configs.each do |manage_config| %>

  <div class="panel panel-default">
    <div class="panel-heading node-block">
      <h3 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= manage_config.key %>">
          <%= manage_config.key %>
        </a>
      </h3>
    </div>
    <div id="collapse<%= manage_config.key %>" class="panel-collapse collapse <% if i==0 %>in<% end %>">
        <table class="table table-hover">
          <thead>
            <th><%= tm 'manage_config.key'  %></th>
            <th><%= tm 'manage_config.value'  %></th>
          </thead>
          <tr>
            <td><%= manage_config.key %></td>
            <td><%= manage_config.value %></td>
          </tr>
        </table>
    </div>
  </div>
  <% i+=1 %>
<% end %>
</div>




<br>
<%= link_to fa_icon('plus',text:'New Config'), new_manage_config_path,class:"btn btn-success" %>



