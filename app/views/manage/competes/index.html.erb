<div class="page-header">
  <h2>举办比赛</h2>
</div>
<% @manage_competes.each do |compete| %>
  <% panel_style = "success" unless compete.is_deleted? %>
  <%= bs_panel title: compete.name_with_annual ,style:panel_style,footer:"创建人：#{compete.admin.nickname if compete.admin}" do %>
    <table style="width:100%">
      <tr>
        <td width="80px">时间进度：</td>
        <td width="80px"><%= compete.start_time %></td>
        <td>
          <div class="progress" id="timeline">
            <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%=  100.0*compete.passed_days/compete.during_days %>%;">
              <%= compete.start_time %>
            </div>
          </div>
        </td>
        <td width="80px" style="text-align:center;"><%= compete.end_time %></td>
      </tr>
    </table>
    <table class="table">

      <tr>
        <td>操作</td>
        <td>
          <%= link_to '详情', compete,class:"btn btn-info" %>
          <%= link_to '编辑', edit_manage_compete_path(compete),class:"btn btn-warning" %>
          <%= link_to '删除', compete, method: :delete, data: { confirm: '确认删除吗?' },class:"btn btn-danger" %>
        </td>
      </tr>
    </table>

  <% end %>
<% end %>



<br>

<%= link_to '新建比赛', new_manage_compete_path,class:"btn btn-success" %>
